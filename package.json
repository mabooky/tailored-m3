{
  "name": "tailored-m3",
  "type": "module",
  "version": "0.0.1",
  "description": "Material Design 3 System Tailored for Next.js & Tailwind CSS",

  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    },
    "./design-tokens-default.css": "./src/design-tokens-default.css",
    "./tailored-m3.css": "./src/tailored-m3.css"
  },

  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  
  "peerDependencies": {
    "next": ">=16",
    "react": ">=19",
    "react-dom": ">=19",
    "tailwindcss": ">=4"
  },
  "dependencies": {
    "tailwind-merge": "^3.4.0"
  },
  "devDependencies": {
    "@tailwindcss/postcss": "^4.1.18",
    "@types/react": "^19.2.13",
    "@types/react-dom": "^19.2.3",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.18",
    "tsup": "^8.5.1",
    "typescript": "^5.9.3"
  }
}